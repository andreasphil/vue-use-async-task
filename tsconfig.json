{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["es2024", "DOM"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "target": "es2024"
  },
  "include": ["**/*.js", "**/*.ts"],
  "exclude": ["**/*.spec.*", "**/*.test.*"]
}
